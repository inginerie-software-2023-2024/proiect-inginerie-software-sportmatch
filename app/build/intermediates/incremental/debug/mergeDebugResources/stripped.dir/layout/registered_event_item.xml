<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="200dp"
        android:layout_height="330dp"
        app:cardBackgroundColor="#A7C957"
        app:cardCornerRadius="40dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        >

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:ems="10"
            android:inputType="date"
            android:text="12/30/2003"
            android:textColor="#FBFDFD" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="280dp"
            android:ems="10"
            android:inputType="time"
            android:text="10:30"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="NUME EVENT"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/eventIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="255dp"
            app:srcCompat="@drawable/baseline_sports_martial_arts_24" />

        <TextView
            android:id="@+id/eventParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="250dp"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="75dp"
            android:background="#A7C957"
            app:srcCompat="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/buttonToChat"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            android:background="#364d5b"
            android:text="Chat"
            app:cardCornerRadius="40dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>